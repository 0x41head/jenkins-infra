---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: uplink
  namespace: uplink
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: uplink
        type: uplink
    spec:
      containers:
        - name: uplink
          image: jenkinsciinfra/uplink:<%= @parameters['image_tag'] %>
          imagePullPolicy: Always
          env:
            - name: NODE_ENV
              value: 'production'
            - name: DB_CONNECTION_STRING
              valueFrom:
                secretKeyRef:
                  name: uplink
                  key: postgres_url
            - name: CLIENT_ID
              valueFrom:
                secretKeyRef:
                  name: uplink
                  key: client_id
            - name: CLIENT_SECRET
              valueFrom:
                secretKeyRef:
                  name: uplink
                  key: client_secret
            - name: SENTRY_DSN
              valueFrom:
                secretKeyRef:
                  name: uplink
                  key: sentry_dsn
          livenessProbe:
            httpGet:
              path: /
              port: 3030
              scheme: HTTP
            initialDelaySeconds: 30
            timeoutSeconds: 5
          readinessProbe:
            httpGet:
              path: /
              port: 3030
              scheme: HTTP
          ports:
            - containerPort: 3030
