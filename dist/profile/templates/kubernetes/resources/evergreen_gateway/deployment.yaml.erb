---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: gateway
  namespace: evergreen
spec:
  replicas: 3
  template:
    metadata:
      labels:
        app: gateway
    spec:
      containers:
        - name: gateway
          image: jenkinsciinfra/sshd:evergreen-<%= @parameters['image_tag'] %>
          imagePullPolicy: Always
          livenessProbe:
            tcpSocket:
              port: 22
            initialDelaySeconds: 5
            timeoutSeconds: 5
          readinessProbe:
            tcpSocket:
              port: 22
            initialDelaySeconds: 5
            timeoutSeconds: 5
          ports:
            - containerPort: 22
          volumeMounts:
              - name: profile
                mountPath: /etc/profile.d/evergreen.sh
                subPath: evergreen.sh
      volumes:
          - name : profile
            configMap:
              name: gateway
