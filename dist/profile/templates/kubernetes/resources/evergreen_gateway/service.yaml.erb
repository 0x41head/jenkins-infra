---
apiVersion: v1
kind: Service
metadata:
  name: gateway
  namespace: evergreen
  labels:
    app: gateway
spec:
  type: LoadBalancer
<% if @parameters['loadBalancerIp'] != 'none' -%>
  loadBalancerIP: <%= @parameters['loadBalancerIp'] %>
<% end -%>
  ports:
    - name: ssh
      targetPort: 22
      port: 22
  selector:
      app: gateway
