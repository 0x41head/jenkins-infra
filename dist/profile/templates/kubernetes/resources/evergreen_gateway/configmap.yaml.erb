apiVersion: v1
kind: ConfigMap
metadata:
  name: gateway
  namespace: evergreen
data:
  evergreen.sh: |
      export DB_HOST=<%= @parameters['db_host'] %> 
      export DB_PORT=<%= @parameters['db_port'] %>
      export DB_USER=<%= @parameters['db_user'] %>
      export DB_NAME=<%= @parameters['db_name']%>
      export DB_PASS= <%= @parameters['db_pass']%>
      
      echo "${DB_HOST}:${DB_PORT}:${DB_NAME}:${DB_USER}:${DB_PASS}" > ${HOME}/.pgpass
      chmod 0600 ${HOME}/.pgpass

      psql -U ${DB_USER} -d ${DB_NAME} -h DB_HOST
