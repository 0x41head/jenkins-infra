---
  apiVersion: v1
  kind: PersistentVolume
  metadata:
    name: ldap-backup
    annotations:
        # Prior to 1.8
      volume.beta.kubernetes.io/mount-options: "uid=101,gid=101,dir_mode=0755,file_mode=0644"
    labels:
        app: ldap-backup
  spec:
    capacity:
      storage: 100Gi
    accessModes:
      - ReadWriteMany
    persistentVolumeReclaimPolicy: Retain
    #mountOptions:  
    #mount-options:  
    #  - uid=100
    #  - gid=100
    azureFile:
        secretName: ldap
        shareName: ldap
        readOnly: false
