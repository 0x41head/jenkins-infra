---
apiVersion: v1
kind: Service
metadata:
  name: ldap
  namespace: ldap
  labels:
    app: ldap
    type: ldap
    logtype: archive
spec:
  type: LoadBalancer
  loadBalancerSourceRanges:
    <% @parameters['whitelisted_sources'].each do |ip| -%>
    - <%= ip -%>
    <% end %>
<% if @parameters['loadBalancerIp'] != 'none' -%>
  loadBalancerIP: <%= @parameters['loadBalancerIp'] %>
<% end -%>
  ports:
  - name: ldap
    protocol: TCP
    targetPort: 389
    port: 389
  - name: ldaps
    protocol: TCP
    targetPort: 636
    port: 636
  selector:
    type: ldap
